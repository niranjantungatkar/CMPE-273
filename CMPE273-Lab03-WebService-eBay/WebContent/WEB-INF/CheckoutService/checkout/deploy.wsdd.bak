<!-- Use this file to deploy some handlers/chains and services      -->
<!-- Two ways to do this:                                           -->
<!--   java org.apache.axis.client.AdminClient deploy.wsdd          -->
<!--      after the axis server is running                          -->
<!-- or                                                             -->
<!--   java org.apache.axis.utils.Admin client|server deploy.wsdd   -->
<!--      from the same directory that the Axis engine runs         -->

<deployment
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java">

  <!-- Services from CheckoutService WSDL service -->

  <service name="Checkout" provider="java:RPC" style="wrapped" use="literal">
      <parameter name="wsdlTargetNamespace" value="http://checkout"/>
      <parameter name="wsdlServiceElement" value="CheckoutService"/>
      <parameter name="schemaQualified" value="http://checkout"/>
      <parameter name="wsdlServicePort" value="Checkout"/>
      <parameter name="className" value="checkout.CheckoutSoapBindingImpl"/>
      <parameter name="wsdlPortType" value="Checkout"/>
      <parameter name="typeMappingVersion" value="1.2"/>
      <operation name="recordTransaction" qname="operNS:recordTransaction" xmlns:operNS="http://checkout" soapAction="" >
        <parameter qname="pns:username" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <parameter qname="pns:product_id" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <parameter qname="pns:product_price" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <parameter qname="pns:product_quantity" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <parameter qname="pns:time" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
      </operation>
      <operation name="updateQuantity" qname="operNS:updateQuantity" xmlns:operNS="http://checkout" soapAction="" >
        <parameter qname="pns:product_id" xmlns:pns="http://checkout" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <parameter qname="pns:product_quantity" xmlns:pns="http://checkout" type="tns:int" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
      </operation>
      <parameter name="allowedMethods" value="recordTransaction updateQuantity"/>

  </service>
</deployment>
